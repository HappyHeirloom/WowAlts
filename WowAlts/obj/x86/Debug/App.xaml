<Application
    x:Class="WowAlts.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WowAlts">

    <Application.Resources>
        <DataTemplate x:Key="Test">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" MinWidth="180" MaxWidth="180">
                <TextBlock TextWrapping="Wrap" TextAlignment="Center">
                    <Run FontWeight="Bold" Text="Character name: "/>
                    <Run FontWeight="Light" Text="{Binding Name}"/>
                </TextBlock>

                <TextBlock TextWrapping="Wrap" TextAlignment="Center">
                    <Run FontWeight="Bold" Text="Character Class: "/>
                    <Run FontWeight="Light" Text="{Binding Class}"/>
                </TextBlock>

                <TextBlock TextWrapping="Wrap" TextAlignment="Center">
                    <Run FontWeight="Bold" Text="Character spec: "/>
                    <Run FontWeight="Light" Text="{Binding Spec}"/>
                </TextBlock>

                <TextBlock TextWrapping="Wrap" TextAlignment="Center">
                    <Run FontWeight="Bold" Text="Character realm: "/>
                    <Run FontWeight="Light" Text="{Binding Realm}"/>
                </TextBlock>

                <TextBlock TextWrapping="Wrap" TextAlignment="Center">
                    <Run FontWeight="Bold" Text="Character faction: "/>
                    <Run FontWeight="Light" Text="{Binding Faction}"/>
                </TextBlock>
            </StackPanel>
        </DataTemplate>
    </Application.Resources>

</Application>

